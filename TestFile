using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace PizzApp
{
    class Program
    {
        static void Main(string[] args)
        {
            string ans = " ";
            Console.WriteLine("Welcome to the Pizza App");
            Console.Write("Would you like to 'Sign Up'?(Y/N): ");
            ans =  Console.ReadLine().ToUpper();

            if (ans.ToUpper() == "Y")
            {
                Customer c = new Customer();
                Console.Write("Enter Name: ");
                c.Name = Console.ReadLine();
                Console.Write("Enter PhoneNumber: ");
                c.PhoneNumber = Convert.ToInt64(Console.ReadLine());
                Console.Write("Enter Street Address: ");
                c.Street = Console.ReadLine();
                Console.Write("Enter City: ");
                c.City = Console.ReadLine();
                Console.Write("Enter State: ");
                c.State = Console.ReadLine();
                Console.Write("Enter ZipCode: ");
                c.ZipCode = Convert.ToInt32(Console.ReadLine());
                Console.Write("Enter Payment Type: ");
                c.PaymentType = Console.ReadLine();

                Console.WriteLine(c.ToString());
                
                Console.Write("Would you like to order PreMade or Custom?(P/C) ");
                ans = Console.ReadLine();
                if (ans.ToUpper() == "P")
                {
                    c.GetPreMadePizza();
                }
                else
                    c.GetCustomPizza();
            }

            
           
          
            //public Pizza(string SupremePizza, string CheesePizza, string Pepperoni, string Chicken, string Mushroom, string Onion, string Pepper, string Cheese)
            //Console.WriteLine(p1.ToString());

        }
    }

    class Customer
    {
        //Extract information from the database
        //Functions to compute certain values
        //Output information to the website

        private long phoneNumber;
        private string name;
        private string street;
        private string city;
        private string state;
        private int zipCode;
        private string paymentType;

        public Customer() { }

        public Customer(long PhoneNumber, string Name, string Street, string City, string State, int ZipCode, string PaymentType)
        {
            this.phoneNumber = PhoneNumber;
            this.Name = Name;
            this.Street = Street;
            this.City = City;
            this.State = State;
            this.ZipCode = ZipCode;
            this.PaymentType = PaymentType;
        }


        public long PhoneNumber
        {
            get
            {
                return phoneNumber;
            }

            set
            {
                phoneNumber = value;
            }
        }

        public string Name
        {
            get
            {
                return name;
            }

            set
            {
                name = value;
            }
        }

        public string Street
        {
            get
            {
                return street;
            }

            set
            {
                street = value;
            }
        }

        public string City
        {
            get
            {
                return city;
            }

            set
            {
                city = value;
            }
        }

        public string State
        {
            get
            {
                return state;
            }

            set
            {
                state = value;
            }
        }

        public int ZipCode
        {
            get
            {
                return zipCode;
            }

            set
            {
                zipCode = value;
            }
        }

        public string PaymentType
        {
            get
            {
                return paymentType;
            }

            set
            {
                paymentType = value;
            }
        }

        
        public void GetPreMadePizza()
        {
            Pizza px = new Pizza();
            Console.WriteLine("Supreme?(S) ");
            px.SupremePizza = Console.ReadLine();
            Console.WriteLine(px.SupremePizza);
        }

        public void GetCustomPizza()
        {
            Pizza cp = new Pizza();
            Console.WriteLine("Pepperoni?(P) ");
            cp.Pepperoni = Console.ReadLine();
            Console.WriteLine("Cheese?(C) ");
            cp.Cheese = Console.ReadLine();
            Console.WriteLine(cp.ToString());

        }
        

        public override string ToString()
        {
            return "Name: " + Name + " Phone Number: " + PhoneNumber + " ZipCode: " + ZipCode + "Payment Type: " + PaymentType;
        }
        
    }

  

    class Pizza
    {
        private string supremePizza;
        private string cheesePizza;
        private string pepperoni;
        private string chicken;
        private string mushroom;
        private string onion;
        private string pepper;
        private string cheese;

        public Pizza() { }
        public Pizza(string SupremePizza, string CheesePizza, string Pepperoni, string Chicken, string Mushroom, string Onion, string Pepper, string Cheese)
        {
            this.SupremePizza = SupremePizza;
            this.CheesePizza = CheesePizza;
            this.Pepperoni = Pepperoni;
            this.Chicken = Chicken;
            this.Mushroom = Mushroom;
            this.Onion = Onion;
            this.Pepper = Pepper;
            this.Cheese = Cheese;
        }

        public string SupremePizza
        {
            get
            {
                return supremePizza;
            }

            set
            {
                supremePizza = value;
            }
        }

        public string CheesePizza
        {
            get
            {
                return cheesePizza;
            }

            set
            {
                cheesePizza = value;
            }
        }

        public string Pepperoni
        {
            get
            {
                return pepperoni;
            }

            set
            {
                pepperoni = value;
            }
        }

        public string Chicken
        {
            get
            {
                return chicken;
            }

            set
            {
                chicken = value;
            }
        }

        public string Mushroom
        {
            get
            {
                return mushroom;
            }

            set
            {
                mushroom = value;
            }
        }

        public string Onion
        {
            get
            {
                return onion;
            }

            set
            {
                onion = value;
            }
        }

        public string Pepper
        {
            get
            {
                return pepper;
            }

            set
            {
                pepper = value;
            }
        }

        public string Cheese
        {
            get
            {
                return cheese;
            }

            set
            {
                cheese = value;
            }
        }


        public override string ToString()
        {
            return "Type of Pizza: " + supremePizza + " Toppings: " + pepperoni + " + " + cheese + " + " + mushroom;
        }

    }

